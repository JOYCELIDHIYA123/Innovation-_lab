// Use destructuring to extract properties from objects into variables
const person = { name: "John", age: 30 };
const { name, age } = person;
console.log(name); 
console.log(age); 

// Use destructuring with default values and nested objects
const user = { username: "johndoe", details: { age: 30 } };
const { username, details: { age } = {} } = user;
console.log(username); 
console.log(age);

// Use the spread operator to clone and merge objects
const clone = { ...person };
console.log(clone); 
 { name: "John", age: 30 }

const merged = { ...person, location: "New York" };
console.log(merged); 
{ name: "John", age: 30, location: "New York" }